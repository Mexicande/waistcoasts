<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.six.xinyidai.ui.activity.XianJinchaoren">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"/>

        <RelativeLayout
            android:id="@+id/layout_phone"
            android:background="@drawable/editext_background"
            android:layout_width="300dp"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_phone"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_phone"/>
            <EditText
                android:id="@+id/etPhone"
                android:background="@null"
                android:maxLength="11"
                android:inputType="phone"
                android:layout_marginLeft="15dp"
                android:textSize="@dimen/sp_14"
                android:hint="请输入手机号"
                android:textColorHint="#b6b6b6"
                android:layout_toRightOf="@id/iv_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_yanzheng"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/layout_phone"
            android:background="@drawable/editext_background"
            android:layout_width="300dp"
            android:layout_height="50dp"
            >

            <ImageView
                android:id="@+id/iv1_yanzheng"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="16.5dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_lock"/>
            <EditText
                android:id="@+id/et_yanzheng"
                android:background="@null"
                android:maxLength="4"
                android:inputType="phone"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="15dp"
                android:hint="验证码"
                android:textColorHint="#b6b6b6"
                android:layout_toRightOf="@id/iv1_yanzheng"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_yanzheng"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:layout_height="45dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_code"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/layout_yanzheng"
            android:background="@drawable/editext_background"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_lock"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="16.5dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_lock"/>
            <EditText
                android:id="@+id/etCode"
                android:background="@null"
                android:maxLength="4"
                android:inputType="phone"
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="15dp"
                android:hint="验证码"
                android:textColorHint="#b6b6b6"
                android:layout_toRightOf="@id/iv_lock"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/bt_getCode"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="12sp"
                android:background="@drawable/fastloginbutton"
                android:textColor="#ffffff"
                android:text="获取验证码"/>
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/bt_Login"
            android:text="登       陆"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:background="@drawable/loginbutton"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginTop="62dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


</LinearLayout>
